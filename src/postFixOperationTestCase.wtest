describe "Post fix operation test case"{
		 
	test "PlusPlus" {  
		
		var n = 1
		n++
		assert.that(n == 2) 
		
	}
	

	test "PlusPlus With Doubles" { 
		
		var n = 2.1
		n++
		assert.that(n == 3.1)
		
	}
	
	test "MinusMinus" { 
		
		var n = 2
		n--
		assert.that(n == 1)
		
	}
	
	 
	test "MinusMinus with doubles" { 
		
		var n = 2.0
		n--
		assert.that(n == 1.0)

	}
}
