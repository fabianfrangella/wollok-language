
class Golondrina {
  var property energy = 0

  method energyLevel() {
    return energy
  }
  
  method addEnergy(amount) {
    energy = energy + amount
  }
  
}

class Golondrina2 {
  var property energia = 0
  method entrenar() { energia += 1 }
}

class Entrenador {
    const property ave
    method entrenar() { ave.entrenar() }
}

const pepita = new Golondrina()

const chuck = new Entrenador(ave = pepita2)
const pepita2 = new Golondrina2()

test "effects - changing attributes of global constant during test" {
  assert.equals(0, pepita.energyLevel())
  pepita.addEnergy(10)
  assert.equals(10, pepita.energyLevel())
}

test "references - assigning a global constant to a global constant" {
  assert.equals(0, pepita2.energia())
  chuck.entrenar()
  assert.equals(1, pepita2.energia())
}