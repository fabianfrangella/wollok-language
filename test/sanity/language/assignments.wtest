describe "Assignments and fields" {

	test "Simple assignment" {
		const myObject = object {
			var a 
			method assignA(b) {
				a = b
			}

			method getA() = a
		}

		myObject.assignA(5)
		assert.equals(5, myObject.getA())
	}

	test "+= operation" {
		const myObject = object {
			var a = 2
			method assignA(b) {
				a += b
			}

			method getA() = a
		  
		}

		myObject.assignA(5)
		assert.equals(7, myObject.getA())
	}

	test "-= operation" {
		const myObject = object {
			var a = 2
			method assignA(b) {
				a -= b
			}

			method getA() = a
		}

		myObject.assignA(5)
		assert.equals(-3, myObject.getA())
	}

	test "*= operation" {
		const myObject = object {
			var a = 2
			method assignA(b) {
				a *= b
			}
			method getA() = a
		}

		myObject.assignA(5)
		assert.equals(10, myObject.getA())
	}

	test "/= operation" {
		const myObject = object {
			var a = 10
			method assignA(b) {
				a /= b
			}

			method getA() = a
		  
		}

		myObject.assignA(2)
		assert.equals(5, myObject.getA())
	}

	test "%= operation" {
		const myObject = object {
			const c = 19
			var a = c
			method assignA(b) {
				a %= b
			}
			method getA() = a
		}

		myObject.assignA(5)
		assert.equals(4, myObject.getA())
	}

}
