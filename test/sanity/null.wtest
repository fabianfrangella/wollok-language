class Golondrina { var energia = 0 }

object pepita {
	var energia
	method energia() { return energia }
		
	method volar(metros) { energia -= metros * 10 }
	method comer(comida) { 
		energia += comida.energia()
	}
}

object alpiste {
	method energia() = 2	
}
		
